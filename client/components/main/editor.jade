template(name="editor")
  textarea.editor(
    dir="auto"
    class="{{class}}"
    id=id
    autofocus=autofocus
    data-meteor-emoji="true"
    placeholder="{{_ 'comment-placeholder'}}")
    +Template.contentBlock

template(name="viewer")
  .viewer(dir="auto")
    +mentions
      +markdown
        {{> UI.contentBlock }}
